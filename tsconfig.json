{
	"include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "tailwind.config.js"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2021"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"module": "esnext",
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"target": "ES2019",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["app/*"]
		},
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"allowJs": true
	}
}
